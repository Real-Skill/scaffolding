{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.3.22",
        "barryvdh/laravel-ide-helper": "2.2.1"
    },
    "require-dev": {
        "fzaninotto/faker": "1.6.0",
        "mockery/mockery": "0.9.5",
        "phpunit/phpunit": "5.6.2",
        "symfony/css-selector": "3.1.6",
        "symfony/dom-crawler": "3.1.6",
        "phpmd/phpmd" : "2.4.3",
        "squizlabs/php_codesniffer": "2.7.0",
        "socialengine/sniffer-rules": "2.2.1",
        "pragmarx/laravelcs": "v0.1.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
        "migrate": "php artisan migrate",
        "test": "phpunit --colors=always",
        "test-report": "phpunit --colors=always --log-junit target/test-results.xml",
        "test-dox": "phpunit --testdox",
        "code-sniffer": "phpcs --standard=phpcs-ruleset.xml app",
        "code-sniffer-report": "phpcs --standard=phpcs-ruleset.xml --report=xml --report-file=target/code-sniffer.xml app",
        "mess-detector": "phpmd app/ text phpmd-ruleset.xml",
        "mess-detector-report": "phpmd app/ xml phpmd-ruleset.xml --reportfile target/mess-detector.xml",
        "verify": [
            "@migrate",
            "@test-report",
            "@code-sniffer-report",
            "@mess-detector-report"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
